@model School
@{
    ViewData["Title"] = "Update the School";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update the School Profile</title>

    <!-- Link to Bootstrap CSS from a CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Link to your custom CSS file with the color scheme -->
    <link rel="stylesheet" href="path_to_custom_styles.css">

    <style>
        /* Additional custom CSS styles can be added here */
        .form-container {
            background-color: var(--background-color);
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        /* Define the color variables */
        :root {
            --primary-color: #6A1B9A; /* Deep purple */
            --secondary-color: #9C27B0; /* Light purple */
            --text-color: #000000; /* Black */
            --background-color: #FFFFFF; /* White */
        }

        /* Apply the colors to different elements */
        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        h1, h2, h3 {
            color: var(--primary-color);
        }

        .button {
            background-color: var(--primary-color);
            color: var(--background-color);
        }

            .button:hover {
                background-color: var(--secondary-color);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <h1 class="text-center">School Profile Form</h1>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="School_Name"></label>
                        <input asp-for="School_Name" type="text" class="form-control" id="schoolName" placeholder="Enter the school name">
                        <span asp-validation-for="School_Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City"></label>
                        <input asp-for="City" type="text" class="form-control" id="schoolName" placeholder="Enter the school city">
                        <span asp-validation-for="City"></span>
                    </div>
                    <div class="form-group">
                        @*<label for="schoolType">School Type:</label>
                            <select class="form-control" id="schoolType">
                                <option value="public">Public</option>
                                <option value="private">Private</option>
                            </select>*@
                        <label asp-for="Address"></label>
                        <input asp-for="Address" type="text" class="form-control" id="schoolName" placeholder="Enter the school address">
                        <span asp-validation-for="Address"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Principl_Name"></label>
                        <input asp-for="Principl_Name" type="text" class="form-control" id="schoolName" placeholder="Enter the school Principal Name">
                        <span asp-validation-for="Principl_Name"></span>
                    </div>
                    <div class="text-center form-group">
                        <!-- Center-align the "Create" button within the container -->
                        @*<button type="button" class="btn button" id="createButton">Create</button>*@
                        <input type="submit" value="Update" id="createButton" class="btn button " />
                        <a class="btn-outline-secondary float-right" asp-controller="School" asp-action="Index">Show all</a>
                        @*<a class="btn btn-outline-secondary" asp-controller="School" asp-action="Index">Show All</a>*@
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Link to Bootstrap JavaScript and Popper.js from CDNs -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>*@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
