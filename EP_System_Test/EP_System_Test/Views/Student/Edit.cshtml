@model NewStudentsVM
@{
    ViewData["Title"] = "Edit a Student Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Profile Form</title>

    <!-- Link to Bootstrap CSS from a CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Link to your custom CSS file with the color scheme -->
    <link rel="stylesheet" href="path_to_custom_styles.css">

    <style>
        /* Additional custom CSS styles can be added here */
        .form-container {
            background-color: var(--background-color);
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        /* Define the color variables */
        :root {
            --primary-color: #6A1B9A; /* Deep purple */
            --secondary-color: #9C27B0; /* Light purple */
            --text-color: #000000; /* Black */
            --background-color: #FFFFFF; /* White */
        }

        /* Apply the colors to different elements */
        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        h1, h2, h3 {
            color: var(--primary-color);
        }

        .button {
            background-color: var(--primary-color);
            color: var(--background-color);
        }

            .button:hover {
                background-color: var(--secondary-color);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <h1 class="text-center">Edit a Student Profile</h1>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" type="text" class="form-control" id="schoolName" placeholder="Enter the Student First Name">
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Last_Name"></label>
                        <input asp-for="Last_Name" type="text" class="form-control" id="schoolName" placeholder="Enter the Student Last Name">
                        <span asp-validation-for="Last_Name"></span>
                    </div>
                    <div class="form-group">
                        @*<label for="schoolType">School Type:</label>
        <select class="form-control" id="schoolType">
            <option value="public">Public</option>
            <option value="private">Private</option>
        </select>*@
                        <label asp-for="Address"></label>
                        <input asp-for="Address" type="text" class="form-control" id="schoolName" placeholder="Enter the Student Address">
                        <span asp-validation-for="Address"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stu_Grade"></label>
                        <input asp-for="Stu_Grade" type="text" class="form-control" id="schoolName" placeholder="Enter the Student Grade">
                        <span asp-validation-for="Stu_Grade"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SchoolId" class="control-label"></label>
                        <select asp-for="SchoolId" class="form-control" asp-items="ViewBag.School"></select>
                        <span asp-validation-for="SchoolId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="TeacherId"></label>
                        <select class="form-control" asp-for="TeacherId" asp-items="ViewBag.Teacher" multiple></select>
                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                    </div>
                    @*             <div class="form-group">
                    <label class="control-label" asp-for="ExtraCurricularIds"></label>
                    <select class="form-control" asp-for="ExtraCurricularIds" asp-items="ViewBag.Extra" multiple></select>
                    <span asp-validation-for="ExtraCurricularIds" class="text-danger"></span>
                    </div> *@
                    <div class="form-group">
                        <label class="control-label" asp-for="SportIds"></label>
                        <select class="form-control" asp-for="SportIds" asp-items="ViewBag.Sports" multiple></select>
                        <span asp-validation-for="SportIds" class="text-danger"></span>
                    </div>
                    <div class="text-center form-group">
                        <!-- Center-align the "Create" button within the container -->
                        @*<button type="button" class="btn button" id="createButton">Create</button>*@
                        <a class="btn btn-secondary float-letf" asp-action="Index">Show All</a>
                        <input type="submit" value="Update" id="createButton" class="btn button " />
                        @*<a class="btn btn-outline-secondary" asp-controller="School" asp-action="Index">Show All</a>*@
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Link to Bootstrap JavaScript and Popper.js from CDNs -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>*@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
